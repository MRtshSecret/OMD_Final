@model ShoppingCMS_V002.Models.FactorDetailModel
@{
    ViewBag.Title = "FactorView";
    Layout = "~/Views/Master/Master.cshtml";
}


    <div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">
        <!-- begin:: Subheader -->
        <div class="kt-subheader   kt-grid__item" id="kt_subheader">
            <div class="kt-container  kt-container--fluid ">
                <div class="kt-subheader__main">
                    <h3 class="kt-subheader__title">
                        داشبورد
                    </h3>
                    <span class="kt-subheader__separator kt-hidden"></span>
                    <div class="kt-subheader__breadcrumbs">
                        <a href="#" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
                        <span class="kt-subheader__breadcrumbs-separator"></span>
                        <a href="#" class="kt-subheader__breadcrumbs-link">
                            فاکتور
                        </a>
                        <span class="kt-subheader__breadcrumbs-separator"></span>
                        <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">نمایش همه ی فاکتور ها </span>
                    </div>
                </div>

            </div>
        </div>



        <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            فاکتور
                        </h3>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <!--begin::Section-->
                    <div class="kt-section">
                        <div class="kt-section__content">
                            <div id="table" class="table-responsive">
                                <table class="table table-bordered">
                                    <caption>
                                        <p>
                                            آدرس : @Model.CustomerAddress
                                        </p>
                                        <p>
                                            تلفن : @Model.CustomerPhoneNumber
                                        </p>
                                    </caption>
                                    <thead>
                                        <tr>

                                            <th colspan="3">نام خریدار : @Model.CustomerName</th>
                                            <th colspan="3">تاریخ : @Model.Date</th>
                                        </tr>
                                        <tr>
                                            <th style="width:4%">#</th>
                                            <th style="width:40%"> محصول</th>
                                            <th style="width:20%">قیمت هر محصول</th>
                                            <th style="width:10%">تعداد</th>
                                            <th style="width:10%">تخفیف</th>
                                            <th style="width:20%">قیمت کل</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <td colspan="6">  مبلغ کل : @Model.totality @Model.priceQuantity</td>
                                        </tr>
                                        <tr>
                                            <td colspan="6">  مبلغ پرداختی : @Model.totality @Model.priceQuantity</td>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model.ProductItems)
                                        {

                                        <tr>
                                            <th>@item.Num</th>
                                            <td scope="row">
                                                <p>@item.Title</p>
                                                <p class="text-muted">(@item.Discription)</p>
                                            </td>
                                            @if (item.offType == 1)
                                            {
                                                <td>
                                                     @item.perPrice @Model.priceQuantity
                                                </td>
                                                <td>@item.Numbers</td>
                                                <td>@item.OffValue</td>
                                                <td>
                                                    @item.allPrice @Model.priceQuantity
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <p><del> @item.perPrice @Model.priceQuantity</del></p>
                                                    <p><ins> @item.perPrice_off @Model.priceQuantity</ins></p>
                                                </td>
                                                <td>@item.Numbers</td>
                                                if (item.offType == 2)
                                                {
                                                    <td>@item.OffValue%</td>
                                                }
                                                else
                                                {
                                        <td>@item.OffValue @Model.priceQuantity</td>
                                                }
                                                <td>
                                                    <p><del> @item.allPrice @Model.priceQuantity</del></p>
                                                    <p><ins> @item.allPrice_Off @Model.priceQuantity</ins></p>
                                                </td>
                                            }
                                        </tr>

                                        }


                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <!--end::Section-->
                </div>
                <!--end::Form-->
            </div>
        </div>
        <!-- end:: Content -->
    </div>