@using ShoppingCMS_V002.Models.D_APIModels
@model List<ProductRateModel>
@{
    ViewBag.Title = "reviewRating";
    Layout = "~/Views/Master/Design_Master.cshtml";
}

<!-- CONTENT AREA -->
<div class="content-area">
    <section class="page-section">
        <div class="wrap container">
            <div class="row">
                <!--start main contain of page-->
                <div class="col-lg-9 col-md-9 col-sm-8">
                    <div class="information-title">نظرات</div>
                    <div class="details-wrap">
                        <div class="details-box orders">
                            <table class="table">
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="ratings">
                                                <p>نظر در مورد محصول</p>
                                                <h4 class="caption-title"><a href="@Url.Action("Product_Detail","D_API",new {Id=item.ProductId })">@item.Title</a></h4>
                                                @*<div class="rating">
                                                    <span class="star"></span>
                                                    <span class="star "></span>
                                                    <span class="star active"></span>
                                                    <span class="star active"></span>
                                                    <span class="star active"></span>
                                                </div>*@
                                                <p>@item.Name</p>
                                                <p>@item.Date</p>
                                            </td>
                                            <td class="reviews">
                                                <h4>@item.Message</h4>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--end main contain of page-->
                <!--start sidebar-->
                <div class="col-lg-3 col-md-3 col-sm-4">
                    <div class="widget account-details">
                        <h2 class="widget-title">حساب</h2>
                        <ul>
                            <li><a href="@Url.Action("myaccount2","D_API")">حساب من</a></li>
                            <li><a href="@Url.Action("accountinformation","D_API")"> اطلاعات حساب </a></li>
                            <li><a href="@Url.Action("ChangePass","D_API")">تغییر رمز عبور</a></li>
                            <li><a href="@Url.Action("addressBook","D_API")">آدرس ها</a></li>
                            <li><a href="@Url.Action("orderHistory","D_API")">تاریخچه خرید</a></li>
                            <li class="active"><a href="@Url.Action("reviewRating","D_API")">نظرات</a></li>
                            <li><a href="@Url.Action("Returns","D_API")">درخواست های تکمیل نشده</a></li>
                            <li><a href="#" onclick="return wishListFunction()">علاقه مندی ها</a></li>
                            @*<li><a href="myaccount-leftsidebar.html">Left Sidebar</a></li>*@
                        </ul>
                    </div>
                </div>
                <!--end sidebar-->

            </div>
        </div>
    </section>
</div>
<!-- /CONTENT AREA -->

